<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HangmanAssignment.HangmanGamePage">
    <VerticalStackLayout>
        <Label Text="Welcome to Hangman" HorizontalTextAlignment="Center" HorizontalOptions="Center" FontAttributes="Bold" FontSize="40"/>
        <Image x:Name="HangmanImage" Margin="40" HorizontalOptions="Center"/>
        <Label x:Name="DisplayAttemptsLabel" FontAttributes="Bold" HorizontalOptions="Center" FontSize="18"/>
        <Label x:Name="DisplayWordLabel" FontAttributes="Bold" FontSize="30" HorizontalOptions="Center" Margin="40"/>
        <Entry x:Name="GuessInput"  FontSize="30" HorizontalOptions="Center" Margin="40" Placeholder="Enter a letter"/>
        <Button Text="Guess" Clicked="OnGuessButtonClicked" />
    </VerticalStackLayout>
</ContentPage>